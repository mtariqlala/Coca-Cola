<div >
<%= link_to "Add New Outlet Details",new_outlet_path, class:"btn btn-primary btn-block" %>
<table class="table table-bordered table-striped">
<thead>
<tr>

<th>Outlet ID</th>
<th>Outlet Name</th>
<th>Location</th>
<th>Manager id</th>
<th>Operations </th>
</tr>
</thead>
<tbody>
<% @outlets.each do |outlet| %>
<tr>
<th><%= outlet.id %></th>
<td><%= outlet.outlet_Name %></td>
<td><%= outlet.location %></td>
<td><%= outlet.manager_id %></td>
<td><div class:"btn-group">
<%= link_to"Edit", edit_outlet_path(outlet.id), class:"btn btn-warning btn-xs"%>
<%= link_to"Show", outlet_path(outlet.id), class:"btn btn-info btn-xs"%>
<%= link_to"delete", outlet_path(outlet.id),method: :delete , data: {confirm: "Are You Sure Want to delete?"} ,class:"btn btn-danger btn-xs"%>
</div></td>
</tr>
<% end %>
</tbody>
</table>
</div>