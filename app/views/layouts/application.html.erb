<!DOCTYPE html>
<html>
<head>

  <title>Coca Cola</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
  <div class="navbar-header">
  <a class="navbar-brand" href="http://www.coca-colacompany.com/">Coca Cola Company </a>

  </div>
    <ul class="nav navbar-nav navbar-left">
    
        <li class="active"><%= link_to "Home", root_path %></li>
   
    </ul>
   
    <ul class="nav navbar-nav navbar-right">
   
    <% if user_signed_in? %>       
        
   
        <li><%= link_to"Sign Out", destroy_user_session_path, method: :delete %></li>
  
    <% else %>
        <li><%= link_to " Login ", user_session_path %> <span class="glyphicon glyphicon-log-in"></span></li>
            <% end %>
    </ul>
</div>

</nav>

 <div class="col-sm-9">
     

<%= yield %>
  
</div>

<nav>
<div class="container-fluid text-center">    
  <div class="row content">
    <div class="col-sm-2 sidenav">
     <ul class="nav nav-pills nav-stacked" >
    <% if user_signed_in? %>
      <li><%= link_to "Managers", managers_path, class:"btn btn-default"%></li>
      <li><%= link_to "Outlets", outlets_path, class:"btn btn-default"%></li>
      <li><%= link_to "Gets", gets_path, class:"btn btn-default"%></li>
      <li><%= link_to "Deliveries", deliveries_path, class:"btn btn-default"%></li>
      <li><%= link_to "Makes", makes_path, class:"btn btn-default"%></li>
      <li><%= link_to "Lorries", lorries_path , class:"btn btn-default"%></li>
      <li><%= link_to "Drives", drives_path, class:"btn btn-default" %></li>
      <li><%= link_to "Drivers", drivers_path, class:"btn btn-default"%></li>
      <% else %>
      <div class="alert alert-danger">
  <strong>Danger!</strong> You should sign in to get access.
</div>
      <% end %>
    </ul>
    </div> 
  </div>
</nav>



</body>
</html>
