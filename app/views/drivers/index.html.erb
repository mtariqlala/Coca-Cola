<div align="left">
<%= link_to "Add New Driver",new_driver_path, class:"btn btn-primary btn-block" %>

<table class="table table-bordered table-striped">
<thead>
<tr>
<th>Driver ID</th>
<th>Driver Name</th>
<th>Contact: No</th>
<th>Salary</th>
<th>Address</th>
<th>Operations </th>
</tr>
</thead>
<tbody>
<% @drivers.each do |driver| %>
<tr>
<th><%= driver.id %></th>
<td><%= driver.name %></td>
<td><%= driver.contact_no %></td>
<td><%= driver.salary %></td>
<td><%= driver.address %></td>
<td><div class:"btn-group">
<%= link_to"Edit", edit_driver_path(driver.id), class:"btn btn-warning"%>
<%= link_to"Show", driver_path(driver.id), class:"btn btn-info"%>
<%= link_to"delete", driver_path(driver.id),method: :delete , data: {confirm: "Are You Sure Want to delete?"} ,class:"btn btn-danger"%>
</div></td>
</tr>
<% end %>
</tbody>
</table>
</div>