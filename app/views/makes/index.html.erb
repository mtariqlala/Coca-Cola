<div align="left">
<%= link_to "Add Record in make",new_make_path, class:"btn btn-primary btn-block" %>
<table class="table table-bordered table-striped">
<thead>
<tr>

<th>Delivery No</th>
<th>Lorry ID </th>
<th>Operations </th>
</tr>
</thead>
<tbody>
<% @make.each do |make| %>
<tr>

<td><%= make.delivery_id %></td>
<td><%= make.lorry_id %></td>
<td><div class:"btn-group">
<%= link_to"Edit", edit_make_path(make.id), class:"btn btn-warning btn-xs"%>
<%= link_to"Show", make_path(make.id), class:"btn btn-info btn-xs"%>
<%= link_to"delete", make_path(make.id),method: :delete , data: {confirm: "Are You Sure Want to delete?"} ,class:"btn btn-danger btn-xs"%>
</div></td>
</tr>
<% end %>
</tbody>
</table>
</div>